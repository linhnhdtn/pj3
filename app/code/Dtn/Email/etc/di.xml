<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="DtnEmailGridFilterPool"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">
                    Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter
                </item>
                <item name="fulltext" xsi:type="object">
                    Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter
                </item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="DtnEmailGridDataProvider"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">
                Dtn\Email\Model\ResourceModel\EmailNotify\Collection
            </argument>
            <argument name="filterPool" xsi:type="object" shared="false">DtnEmailGridFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="Dtn\Email\Model\ResourceModel\EmailNotify\Grid\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">email_notify</argument>
            <argument name="resourceModel" xsi:type="string">Dtn\Email\Model\ResourceModel\EmailNotify</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="dtn_email_index_listing_data_source" xsi:type="string">
                    Dtn\Email\Model\ResourceModel\EmailNotify\Grid\Collection
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Dtn\Email\Logger\EmailLog">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <type name="Dtn\Email\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">emailLog</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Dtn\Email\Logger\EmailLog</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="HistorySendEmailGridDataProvider"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">
                Dtn\Email\Model\ResourceModel\History\Collection
            </argument>
            <argument name="filterPool" xsi:type="object" shared="false">HistoryGridFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="Dtn\Email\Model\ResourceModel\History\Grid\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">history_send_email</argument>
            <argument name="resourceModel" xsi:type="string">Dtn\Email\Model\ResourceModel\History</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="dtn_email_history_listing_data_source" xsi:type="string">
                    Dtn\Email\Model\ResourceModel\History\Grid\Collection
                </item>
            </argument>
        </arguments>
    </type>
</config>
